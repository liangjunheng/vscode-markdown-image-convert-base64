{
	"name": "markdown-intellisense",
	"private": true,
	"displayName": "Markdown Intellisense",
	"version": "1.0.2",
	"publisher": "liangjunheng",
	"icon": "icon.png",
	"description": "This is a markdown ext that replace base64 code by `![][image-id]` and append base64 code to the text's last line.",
	"repository": "https://github.com/liangjunheng/vscode-ext-markdown-base64-replace-by-id",
	"bugs": {
		"url": "https://github.com/liangjunheng/vscode-ext-markdown-base64-replace-by-id/issue"
	},
	"engines": {
		"vscode": "^1.100.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"browser": "./dist/web/extension.js",
	"main": "./dist/web/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.pasteUrl",
				"title": "MarkDown: Paste Url"
			}
		],
		"keybindings": [
			{
				"command": "extension.pasteUrl",
				"key": "ctrl+v",
				"mac": "ctrl+v",
				"when": "editorFocus && editorLangId == markdown"
			}
		],
		"configuration": {
			"title": "Markdown Intellisense",
			"properties": {
				"markdown-intellisense.modifyImageWidth": {
					"type": "integer",
					"default": 0,
					"minimum": 0,
					"scope": "application",
					"description": "modify image width. defaults: original image width"
				}
			}
		}
	},
	"scripts": {
		"install": "npm install ",
		"test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=.",
		"pretest": "npm run compile-web",
		"vscode:prepublish": "npm run package-web",
		"compile-web": "webpack",
		"watch-web": "webpack --watch",
		"package-web": "webpack --mode production --devtool hidden-source-map",
		"vscode:prepublish-static": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint . --ext .ts,.tsx",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/mocha": "10.0.10",
		"@types/path-browserify": "^1.0.3",
		"@types/vscode": "^1.100.0",
		"@types/webpack-env": "^1.18.8",
		"@typescript-eslint/eslint-plugin": "^8.48.0",
		"@typescript-eslint/parser": "^8.48.0",
		"@vscode/test-web": "^0.0.76",
		"assert": "^2.1.0",
		"eslint": "^9.39.1",
		"mocha": "^11.7.5",
		"process": "^0.11.10",
		"ts-loader": "^9.5.4",
		"typescript": "^5.9.3",
		"webpack": "^5.52.1",
		"webpack-cli": "^6.0.1"
	},
	"dependencies": {
		"uuid": "^13.0.0",
		"path-browserify": "^1.0.1"
	},
	"extensionPack": [
		"bierner.markdown-mermaid",
		"corschenzi.mermaid-graphical-editor",
		"octop162.markdown-table-editor"
	]
}